  config.odb_examples.mssql.host=$getenv(DATABASE_HOST)
  config.odb_examples.mssql.port=$getenv(DATABASE_PORT)
  config.odb_examples.mssql.driver=$getenv(MSSQL_ODBC_DRIVER)
}+ odb-examples
\

